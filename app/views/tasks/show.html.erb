<div class="row">
  <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>">
        <%= message %>
      </div>
    <% end %>
     
    <h1>id: <%= @task.id %>のサンプル名詳細ページ</h1>
    <table class="table table-bordered">
      <tr>
        <th>id</th>
        <td><%= @task.id %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @task.status %></td>
      </tr>
      <tr>
        <th>サンプル</th>
        <td><%= @task.content %></td>
      </tr>
    </table>

    <%= link_to '一覧に戻る', tasks_path, class: "btn btn-primary"%>

    <%= link_to 'このメッセージを編集する', edit_task_path(@task),  class: 'btn btn-default'%>

    <%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
  </div>
</div>